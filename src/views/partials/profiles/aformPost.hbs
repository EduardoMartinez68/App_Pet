<style>
    h2 {
        text-align: center;
        margin-bottom: 30px;
    }
    
    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
    }

    .form-group input[type="file"], .form-group textarea {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .form-group textarea {
        height: 100px;
        resize: vertical;
        background-color: var(--color-background);
        color: white;
    }
    .form-group button {
        background-color: var(--color-company);
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        float: right;
    }
    .form-group button:hover {
        background-color: var(--color-hover);
    }


    .custom-file-upload {
        background-color: var(--color-company);
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        display: inline-block;
        text-align: center;
        font-size: 16px;
        width: 25%;
    }
    .custom-file-upload:hover {
        background-color: var(--color-hover);
    }

    .custom-file-input {
        display: none;
    }

    @media (max-width: 768px) {
        .custom-file-upload {
            width: 100%;
        }

        .name-user-post, .time-post{
            padding-left: 16%;
        }
    }
</style>
<br>
<div class="container header">
    <form action="/upload" method="POST" enctype="multipart/form-data">
        <div class="row">
            <div class="col-1">
                <div class="profile-pic-container-post">
                    <img src="https://img6.hotnessrater.com/6297109/payton-preslee-nude.jpg?w=4000&h=6000"
                        alt="Foto de Perfil" class="profile-pic-post">
                </div>
            </div>
            <div class="col-11">
                <h5 class="name-user-post">Payton Preslee</h5>
            </div>
        </div>
        <br>
        <div class="form-group">
            <textarea id="description" name="description" placeholder="what happened?..." required></textarea>
        </div>
        <div class="image-preview">
            <img id="img-preview" src="#" alt="Preview" style="display: none;" class="img-post-form">
        </div>
        <div class="form-group">
            <label for="media" class="custom-file-upload">
                upload image or video
                <input type="file" id="media" name="media" accept="image/*, video/*" onchange="previewImage(event)" class="custom-file-input" required>
            </label>
            <button type="submit">Post</button>
        </div>
    </form>
    <br><br>
</div>
<script>
    function previewImage(event) {
        var reader = new FileReader();
        reader.onload = function(){
            var imgElement = document.getElementById('img-preview');
            imgElement.src = reader.result;
            imgElement.style.display = 'block';
        }
        reader.readAsDataURL(event.target.files[0]);
    }
</script>