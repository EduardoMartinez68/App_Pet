<div id="modal" class="modal">
    <span class="close">&times;</span>
    <img class="modal-content" id="modalImg">
    <div class="caption"></div>
    <a class="prev">&#10094;</a>
    <a class="next">&#10095;</a>
</div>


<script>
    // Seleccionar todas las imágenes dentro de divs con la clase .photo-container
    const images = document.querySelectorAll('.photo-container img');

    // Iterar sobre cada imagen
    images.forEach(image => {
        // Obtener el atributo 'unlocked' del div padre (.photo-container)
        const unlocked = image.parentElement.getAttribute('unlocked');

        // Verificar el valor del atributo 'unlocked'
        if (unlocked === 'false') { //true
            // Si es 'true', eliminar la clase .blocked-photo y el ícono de bloqueo
            image.classList.remove('blocked-photo');
            const lockIcon = image.parentElement.querySelector('.lock-icon');
            if (lockIcon) {
                lockIcon.remove();
            }
        }
    });
</script>
<script>
    // Selección de elementos
    var modal = document.getElementById("modal");
    var modalImg = document.getElementById("modalImg");
    var captionText = document.querySelector(".caption");
    var closeBtn = document.querySelector(".close");
    var currentIndex;
    const username=document.getElementById('username').textContent+' ©'; 

    // Mostrar imagen en pantalla completa al hacer clic
    images.forEach((img, index) => {
        img.addEventListener("click", function () {
            modal.style.display = "block";
            modalImg.src = this.src;
            captionText.innerHTML = username; //this.alt;
            currentIndex = index;
        });
    });

    // Cerrar modal
    closeBtn.onclick = function () {
        modal.style.display = "none";
    }

    // Navegación entre imágenes
    document.querySelector(".prev").addEventListener("click", function () {
        currentIndex = (currentIndex > 0) ? currentIndex - 1 : images.length - 1;
        modalImg.src = images[currentIndex].src;
        captionText.innerHTML = username;//images[currentIndex].alt;
    });

    document.querySelector(".next").addEventListener("click", function () {
        currentIndex = (currentIndex < images.length - 1) ? currentIndex + 1 : 0;
        modalImg.src = images[currentIndex].src;
        captionText.innerHTML = username;//images[currentIndex].alt;
    });

    // Cerrar modal al hacer clic fuera de la imagen
    window.addEventListener("click", function (event) {
        if (event.target === modal) {
            modal.style.display = "none";
        }
    });
</script>