<link rel="stylesheet" href="/css/form.css">
<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <form>
                <label><i class="fi fi-ss-bone"></i> Agregar nuevo Servicios</label>
                <hr>
                <div class="form-group">
                    <label>Fotos del Servicio</label>
                    <div class="mt-3" id="preview-container">
                        <img id="preview1" class="preview-img" src="https://addtext.imageonline.co/es/addimg.jpg" alt="Vista previa de la Foto 1"
                            >
                        <img id="preview2" class="preview-img" src="https://addtext.imageonline.co/es/addimg.jpg" alt="Vista previa de la Foto 2"
                            >
                        <img id="preview3" class="preview-img" src="https://addtext.imageonline.co/es/addimg.jpg" alt="Vista previa de la Foto 3"
                            >
                    </div>
                    <div class="file-input-wrapper">
                        <button class="file-input"><i class="fi fi-sr-up"></i> Subir Fotos</button>
                        <input type="file" class="form-control-file" id="photos" name="photos[]" accept="image/*"
                            multiple onchange="previewImages(event)">
                    </div>
                </div>
                <div class="form-group">
                    <label for="name">Nombre del Servicio</label>
                    <input type="text" class="form-control" id="name" name="name" maxlength="100" required>
                </div>
                <div class="form-group">
                    <label for="description">Descripción</label>
                    <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-10">
                            <label for="price">Precio</label>
                            <input type="number" class="form-control" id="price" name="price" step="0.01" required>
                        </div>
                        <div class="col-2">
                            <label for="">Moneda</label>
                            <input type="text" value="$USD" readonly class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="idServiceCategory">ID de la Categoría del Servicio</label>
                    <input type="number" class="form-control" id="idServiceCategory" name="id_service_category">
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary"><i class="fi fi-ss-disk"></i> Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<br><br><br>
<script>
    function previewImages(event) {
        const input = event.target;
        const previewContainer = document.getElementById('preview-container');
        const files = input.files;
        const maxFiles = 3;

        for (let i = 0; i < files.length && i < maxFiles; i++) {
            const reader = new FileReader();
            reader.onload = function(e) {
                const img = document.getElementById(`preview${i + 1}`);
                img.src = e.target.result;
            }
            reader.readAsDataURL(files[i]);
        }
    }
</script>