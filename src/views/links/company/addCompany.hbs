<link rel="stylesheet" href="/css/form.css">
<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <label class="card-title"><i class="fi fi-ss-bone"></i> Crear mi Empresa</label>
            <hr>
            <form>
                <div class="form-group">
                    <label for="name">Nombre de la Empresa</label>
                    <input type="text" class="form-control" id="name" name="name" maxlength="200" required>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="phone">Pais</label>
                            <input type="text" value="México" readonly class="form-control">
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="cellphone">Estado</label>
                            {{>form/state/mexico}}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="address">Dirección</label>
                    <input type="text" class="form-control" id="address" name="address" required>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="email">Correo Electrónico</label>
                            <input type="email" class="form-control" id="email" name="email">
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="website">Sitio Web</label>
                            <input type="url" class="form-control" id="website" name="website">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="phone">Teléfono</label>
                            <input type="tel" class="form-control" id="phone" name="phone"
                                pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="Formato: 123-456-7890">
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="cellphone">Teléfono Celular</label>
                            <input type="tel" class="form-control" id="cellphone" name="cellphone"
                                pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="Formato: 123-456-7890">
                        </div>
                    </div>
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Crear</button>
                </div>
            </form>
        </div>
    </div>
</div>
<br><br><br>